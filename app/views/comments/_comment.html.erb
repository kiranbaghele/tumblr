<div>
  <div>
    <p><strong><%= comment.name %></strong></p>
    <p><%= comment.body %></p>
    <p><%= time_ago_in_words(comment.created_at)%>ago</p>
  </div>
  <%if user_signed_in?%>
    <p><%= link_to :Delete, [comment.post, comment], method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %></p>
  <%end%>
</div>
