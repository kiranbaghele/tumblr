<h1>post/index</h1>

<% @posts.each do |post| %>
<div class="post_wrapper">
  <h2 class="title"><%= link_to post.title, post%></h2>
  <p class="body"><%= truncate(post.body, length:100)%></p>
  <p class="date"><%= time_ago_in_words(post.created_at)%></p>
</div>
<%= link_to :Edit, edit_post_path(post.id), class: "btn btn-success" %>
<%= link_to :Delete, post_path(post.id), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
<%end%>
