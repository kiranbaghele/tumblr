<%= form_for @post do |f|%>
  <% if @post.errors.any? %>
    <div id="errors">
      <h2><%= pluralize(@post.errors.count, "error") %>stopped this post from saving</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <%end%>
      </ul>
    </div>
  <%end%>

  <div>
    <%= f.label :title%><br />
    <%= f.text_field :title%>
  </div>
  <div>
    <%= f.label :body%><br />
    <%= f.text_area :body%>
  </div><br />
  <%= f.submit %>
<%end%>
